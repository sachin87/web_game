<% provide(:title, "Edit Gamer") %>
<h1>Update your profile</h1>

<div class="row">
  <div class="span6 offset3">
  <%= form_for(@gamer) do |f| %>
      <%= render 'shared/error_messages' %>
      <%= render "form", f: f %>
      <%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
    <% end %>

    <%= gravatar_for @gamer %>
    <a href="http://gravatar.com/emails">change</a>
  </div>
</div>